# API Keys for AI Story Rewriter
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Discord Integration
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# News Sources
ESPN_API_KEY=your_espn_api_key_here
SPORTS_API_KEY=your_sports_api_key_here

# Configuration
AI_PROVIDER=openai
# Options: openai, anthropic
AI_MODEL=gpt-4-turbo-preview
# OpenAI: gpt-4-turbo-preview, gpt-3.5-turbo
# Anthropic: claude-3-opus-20240229, claude-3-sonnet-20240229

# Story Processing Settings
MAX_STORIES_PER_HOUR=20
REWRITE_VERSIONS=3
TARGET_ORIGINALITY_SCORE=85
PROCESSING_TIMEOUT=30000

# Monitoring Settings
CHECK_INTERVAL_MINUTES=5
MONITOR_KEYWORDS=breaking,trade,injury,suspension,fired,hired,championship,playoff