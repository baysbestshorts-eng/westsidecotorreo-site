# Environment Variables Template

Copy this file to `.env` and fill in your API keys and configuration values.

# ===========================================
# SPORTS DATA APIS
# ===========================================

# API-Sports (Primary sports data source)
# Get your key from: https://api-sports.io/
API_SPORTS_KEY=your_api_sports_key_here
API_SPORTS_HOST=v1.american-football.api-sports.io

# TheSportsDB (Secondary/backup source)  
# Get your key from: https://www.thesportsdb.com/api.php
THESPORTSDB_KEY=your_thesportsdb_key_here

# ESPN API (Free supplementary data)
# No key required, but may have rate limits
ESPN_API_ENABLED=true

# ===========================================
# AI CONTENT GENERATION
# ===========================================

# OpenAI API for script generation
# Get your key from: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=400
OPENAI_TEMPERATURE=0.7

# ===========================================
# FLIKI AI VIDEO GENERATION  
# ===========================================

# Fliki AI API for video creation
# Get your key from: https://fliki.ai/
FLIKI_API_KEY=your_fliki_api_key_here
FLIKI_API_URL=https://api.fliki.ai/v1

# Default voice settings
FLIKI_VOICE_ID=en-US-AriaNeural
FLIKI_VOICE_SPEED=1.0
FLIKI_VOICE_PITCH=1.0

# Video settings
FLIKI_VIDEO_RESOLUTION=1080p
FLIKI_VIDEO_FORMAT=mp4
FLIKI_ASPECT_RATIO=16:9

# ===========================================
# YOUTUBE INTEGRATION
# ===========================================

# YouTube Data API v3 credentials
# Get from: https://console.cloud.google.com/
YOUTUBE_CLIENT_ID=your_youtube_client_id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REDIRECT_URI=http://localhost:3000/auth/callback

# OAuth tokens (obtained during initial setup)
YOUTUBE_ACCESS_TOKEN=your_youtube_access_token
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token

# Channel settings
YOUTUBE_CHANNEL_ID=your_channel_id_here
YOUTUBE_DEFAULT_CATEGORY=17
YOUTUBE_DEFAULT_PRIVACY=public

# ===========================================
# IMAGE SOURCES
# ===========================================

# Unsplash (Free images)
# Get your key from: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your_unsplash_access_key
UNSPLASH_SECRET_KEY=your_unsplash_secret_key

# Getty Images (Premium - optional)
# Get your key from: https://developers.gettyimages.com/
GETTY_API_KEY=your_getty_api_key
GETTY_API_SECRET=your_getty_api_secret

# ===========================================
# MAKE.COM INTEGRATION
# ===========================================

# Make.com webhook URLs for scenario triggers
MAKE_WEBHOOK_DATA_COLLECTION=https://hook.us1.make.com/your_webhook_id_1
MAKE_WEBHOOK_CONTENT_PROCESSING=https://hook.us1.make.com/your_webhook_id_2
MAKE_WEBHOOK_VIDEO_GENERATION=https://hook.us1.make.com/your_webhook_id_3
MAKE_WEBHOOK_PUBLISHING=https://hook.us1.make.com/your_webhook_id_4
MAKE_WEBHOOK_MONITORING=https://hook.us1.make.com/your_webhook_id_5

# Make.com API for scenario control
MAKE_API_KEY=your_make_api_key
MAKE_TEAM_ID=your_make_team_id

# ===========================================
# MONITORING & ALERTS
# ===========================================

# Twilio for SMS alerts (optional)
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
ADMIN_PHONE_NUMBER=+1987654321

# Email alerts (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
ADMIN_EMAIL=admin@yourdomain.com

# ===========================================
# BUDGET & COST CONTROLS
# ===========================================

# Daily budget limits (in USD)
DAILY_BUDGET_LIMIT=100.00
WEEKLY_BUDGET_LIMIT=500.00
MONTHLY_BUDGET_LIMIT=2000.00

# Cost per operation estimates
COST_PER_API_REQUEST=0.001
COST_PER_OPENAI_TOKEN=0.00002
COST_PER_FLIKI_VIDEO=1.50
COST_PER_YOUTUBE_UPLOAD=0.00

# ===========================================
# WORKFLOW SETTINGS
# ===========================================

# Video generation targets
VIDEOS_PER_DAY_TARGET=15
VIDEOS_PER_DAY_MAXIMUM=20
MIN_HOURS_BETWEEN_VIDEOS=1.2

# Content filtering
ENABLED_SPORTS=NFL,NBA,MLB,NHL,UFC,Boxing
CONTENT_LANGUAGE=en
MIN_CONTENT_SCORE=7.0

# Scheduling
PUBLISH_START_HOUR=6
PUBLISH_END_HOUR=22
TIMEZONE=America/Los_Angeles

# ===========================================
# QUALITY CONTROLS
# ===========================================

# Content validation
MIN_SCRIPT_LENGTH=150
MAX_SCRIPT_LENGTH=300
DUPLICATE_CHECK_ENABLED=true
PROFANITY_FILTER_ENABLED=true

# Video validation  
MIN_VIDEO_DURATION=45
MAX_VIDEO_DURATION=120
VIDEO_QUALITY_CHECK=true

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================

# Development mode settings
NODE_ENV=production
DEBUG_MODE=false
LOG_LEVEL=info
TEST_MODE=false

# Local development
LOCAL_STORAGE_PATH=/tmp/sports-videos
BACKUP_STORAGE_PATH=/backup/sports-automation

# Database (for analytics and tracking)
DATABASE_URL=sqlite:./sports_automation.db
REDIS_URL=redis://localhost:6379

# ===========================================
# ADVANCED SETTINGS
# ===========================================

# Rate limiting
API_RATE_LIMIT_PER_MINUTE=60
CONCURRENT_VIDEO_GENERATION=3
MAX_RETRY_ATTEMPTS=3

# Caching
CACHE_SPORTS_DATA_HOURS=2
CACHE_IMAGES_HOURS=24
CACHE_GENERATED_CONTENT_HOURS=1

# File storage
TEMP_FILE_CLEANUP_HOURS=24
MAX_STORAGE_SIZE_GB=10
COMPRESS_VIDEOS=true