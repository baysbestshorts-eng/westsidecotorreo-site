    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "dotenv": "^16.3.1",
    "googleapis": "^126.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
